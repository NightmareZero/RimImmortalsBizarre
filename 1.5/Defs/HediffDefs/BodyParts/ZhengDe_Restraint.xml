<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <!-- 克己相关身体部件 -->

    <!-- 无量心 -->
    <!-- 特效：脑后光环 -->

    <!-- 慧眼 -->
    <!-- 夜视，技能，移除隐形，若有DLC，顺便移除黑暗灵能隐形 -->

    <!-- 辩才舌 -->
    <!-- 交易、传教相关系数 -->

    <!-- 斋藏胃 -->
    <!-- 免疫食物中毒，毒素hediff免疫，成瘾免疫 -->

    <!-- 笃行腿 -->
    <!-- 不可阻挡 -->
    <!-- “欲速则不达。”修行如同攀登高峰，需一步一个脚印，稳健前行。若贪图捷径，往往会导致根基不稳 -->

    <!-- 般若腿 -->
    <!-- 般若的含义是辨识智慧、辨识才智 -->
    <!-- 影响研究速度 -->
    <HediffDef ParentName="ZdBodyPartBase">
        <defName>Zd_PrajnaLeg</defName>
        <label>prajna leg</label>
        <labelNoun>an prajna leg</labelNoun>
        <description>The meaning of prajna is to recognize wisdom and intelligence, which affects research speed.</description> 
        <tags>
            <li>NzRI_ZhengDe_BodyPart</li>
            <li>NzRI_ZhengDe_Restraint</li>
        </tags>
        <stages>
            <li>
                <statFactors>
                    <!-- 普通工作速度 -->
                    <ResearchSpeed>2.0</ResearchSpeed>
                    <!-- 破解速度 -->
                    <HackingSpeed>2.0</HackingSpeed>
                </statFactors>
                <statOffsets>
                </statOffsets>
            </li>
        </stages>
        <aptitudes>
            <Intellectual>8</Intellectual>
        </aptitudes>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>1.50</partEfficiency>
            <betterThanNatural>true</betterThanNatural>
        </addedPartProps>
    </HediffDef>

    <!-- 匠心臂 -->
    <!-- 加质量偏移(见手工大师) -->
    <!-- 心如工画师，能画诸世间。五蕴悉从生，无法而不造。 -->
    <!-- 我们的心如同画师，能够绘制出世间万象，而修行正是要描绘出内心的清净与智慧。 -->
    <HediffDef ParentName="ZdBodyPartBase">
        <defName>Zd_CraftsmanshipArm</defName>
        <label>craftsmanship arm</label>
        <labelNoun>an craftsmanship arm</labelNoun>
        <description>Our mind is like a painter, capable of painting all the images of the world, and the practice of meditation is precisely to paint the purity and wisdom of the heart.</description>
        <tags>
            <li>NzRI_ZhengDe_BodyPart</li>
            <li>NzRI_ZhengDe_Restraint</li>
        </tags>
        <comps>
            <li Class="HediffCompProperties_VerbGiver">
                <tools>
                    <li>
                        <label>fist</label>
                        <capacities>
                            <li>Blunt</li>
                        </capacities>
                        <power>23</power>
                        <cooldownTime>1.8</cooldownTime>
                        <soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
                        <soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
                    </li>
                </tools>
            </li>
            <!-- 制造质量偏移 -->
            <li Class="NzRimImmortalBizarre.Comp_ProductionQualityOffset">
                <offset>2</offset>
            </li>
        </comps>
        <stages>
            <li>
                <statFactors>
                    <!-- 普通工作速度 -->
                    <GeneralLaborSpeed>2.1</GeneralLaborSpeed>
                    <!-- 建造速度 -->
                    <ConstructionSpeed>2.0</ConstructionSpeed>
                </statFactors>
                <statOffsets>
                </statOffsets>
            </li>
        </stages>
        <aptitudes>
            <Crafting>8</Crafting>
            <Artistic>8</Artistic>
        </aptitudes>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>1.50</partEfficiency>
            <betterThanNatural>true</betterThanNatural>
        </addedPartProps>
    </HediffDef>

    <!-- 勤工臂 -->
    <!-- 全局工作效率，操作 -->
    <!-- 修行非一蹴而就之事，需以勤劳之心，持续不断地耕耘。 -->
    <HediffDef ParentName="ZdBodyPartBase">
        <defName>Zd_DiligenceArm</defName>
        <label>diligence arm</label>
        <labelNoun>an diligence arm</labelNoun>
        <description>Cultivation is not something that can be accomplished overnight, but requires
            continuous cultivation with a diligent heart.\n\nIncrease in mining and farming skills and efficiency</description>
        <tags>
            <li>NzRI_ZhengDe_BodyPart</li>
            <li>NzRI_ZhengDe_Restraint</li>
        </tags>
        <comps>
            <li Class="HediffCompProperties_VerbGiver">
                <tools>
                    <li>
                        <label>fist</label>
                        <capacities>
                            <li>Blunt</li>
                        </capacities>
                        <power>21</power>
                        <cooldownTime>2</cooldownTime>
                        <soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
                        <soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
                    </li>
                </tools>
            </li>
        </comps>
        <stages>
            <li>
                <statFactors>
                    <!-- 全局工作速度 -->
                    <WorkSpeedGlobal>1.3</WorkSpeedGlobal>
                    <!-- 种植速度 -->
                    <PlantWorkSpeed>3</PlantWorkSpeed>
                    <!-- 挖掘速度 -->
                    <MiningSpeed>3</MiningSpeed>
                </statFactors>
                <statOffsets>
                </statOffsets>
            </li>
        </stages>
        <aptitudes>
            <Plants>6</Plants>
            <Mining>6</Mining>
        </aptitudes>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>1.50</partEfficiency>
            <betterThanNatural>true</betterThanNatural>
        </addedPartProps>
    </HediffDef>
</Defs>