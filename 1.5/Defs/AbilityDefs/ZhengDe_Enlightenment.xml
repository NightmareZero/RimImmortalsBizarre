        <rEnergy>-15</rEnergy>
      </li>
      <!-- 生成指定物体 -->
      <li Class="CompProperties_AbilitySpawn">
        <!-- TODO -->
        <thingDef>NzRI_Zd_BulletShield</thingDef>
      </li>
      <!-- TODO -->
